{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "pretty": true
  }
}
